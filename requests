Set the count of recipes 

MATCH (r:Recipe)-->(i:Ingredient { index: "2"}) WITH i, count(r) AS cnt SET i.recipeCount = cnt RETURN i;
MATCH (r:Recipe)-->(i:Ingredient) WITH i, count(r) AS cnt SET i.recipeCount = cnt RETURN i;

Set recipeScore
MATCH (r:Recipe)--(i:Ingredient) WITH r, avg(i.recipeCount) AS average SET r.recipeScore = average RETURN r ;

MATCH (r:Recipe { index: "81"})--(i:Ingredient) WITH r, avg(i.recipeCount) AS average, count(i) as ingrCount SET r.recipeScore = average RETURN r ;